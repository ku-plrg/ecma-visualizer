{
  "name": "ECMA Visualizer",
  "description": "show a js program for corresponding step of ECMAScript specification",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "images/dimmed-icon-16.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "host_permissions": ["https://tc39.es/ecma262/2024/*"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["content.css"],
      "matches": ["https://tc39.es/ecma262/2024/*"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/logo.jpeg", "resources/*"],
      "matches": ["https://tc39.es/*"]
    }
  ]
}
